/* components/progressBar/progressBar.wxss */
/* progress-bar start */
.progress-bar-wrap{
  position: relative;
  background-color: #eeeeee;
  border: 1px solid #999999;
  width: 350rpx;
  height: 50rpx;
  border-radius: 100rpx;
  overflow: hidden;
}

.progress-bar-content{
  position: absolute;
  background-color: blue;
  width: 50%;
  height: 100%;
  border-top-right-radius: 20rpx;
  border-bottom-right-radius: 20rpx;
  transition: width .3s;
}

.progress-bar-text{
  position: absolute;
  width: 100%;
  height: 100%;
  display: flex;
  justify-content: center;
  align-items: center;
}
/* progress-bar end */
