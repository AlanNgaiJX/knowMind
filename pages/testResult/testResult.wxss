/* pages/testResult/testResult.wxss */
.page-testResult {}

.vmse-wtc {
  position: absolute;
  left: -10000rpx;
}

.btn-group {
  display: flex;
}

.vmse-bg {
  padding: 44rpx 114rpx;
}

.vmse-content {
  width: 562rpx;
  height: 1021rpx;
  box-shadow: 0rpx 4rpx 48rpx 0rpx rgba(183, 133, 133, 0.36);
  border-radius: 10rpx;
  border: 4rpx solid #FFFFFF;
  position: relative;
}

.vmse-avatar {
  position: absolute;
  left: 60rpx;
  top: 162rpx;
  width: 100rpx;
  height: 100rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.vmse-qrcode {
  width: 120rpx;
  height: 120rpx;
  position: absolute;
  left: 100.5rpx;
  bottom: 25.5rpx;
}

.share-pannel {
  width: 100%;
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
}

.btn-share {
  width: 450rpx;
  height: 100rpx;
  background-color: #ffc9b3;
  border-radius: 20rpx;
  border: 2px solid #FFFFFF;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 15rpx;
  font-size: 30rpx;
  font-weight: 400;
  padding: 0;
}

.icon-lock {
  width: 50rpx;
  height: 50rpx;
  background-image: url("https://alanngai1996.xyz/store/know-mind/assets/icon-lock.png");
  background-repeat: no-repeat;
  background-size: 80%;
  background-position: center center;
}

.btn-save {
  width: 450rpx;
  height: 100rpx;
  background-color: #ffc9b3;
  border-radius: 20rpx;
  border: 2px solid #FFFFFF;
  color: #FFFFFF;
  display: flex;
  justify-content: center;
  align-items: center;
  font-size: 30rpx;
  font-weight: 400;
  padding: 0;
}

.more {
  margin-top: 60rpx;
  position: relative;
}

.more .shade {
  position: absolute;
  width: 100%;
  height: 100%;
  background-color: rgba(255, 255, 255, .95);
  background-color: #fffaf7fb;
  z-index: 1;
  display: flex;
  justify-content: center;
}

.shade .lock-wrap {
  margin-top: 50rpx;
  display: flex;
  justify-content: center;
  width: 100%;
  height: 88rpx;
  align-items: center;
}

.lock-wrap .lock {
  display: block;
  width: 88rpx;
  height: 88rpx;
  background: url("https://alanngai1996.xyz/store/know-mind/assets/icon-big-lock.png") no-repeat;
  background-size: contain;
}

.lock-wrap::before {
  content: "";
  display: block;
  width: 200rpx;
  border-top: 1px dashed #ffc9b3;
  margin-right: 15rpx;
}

.lock-wrap::after {
  content: "";
  display: block;
  width: 200rpx;
  border-top: 1px dashed #ffc9b3;
  margin-left: 15rpx;
}

.more-content {
  padding: 60rpx;
}

.more-content .subject {
  margin-bottom: 80rpx;
}

.subject .title {
  font-size: 38rpx;
  color: #333333;
  margin-bottom: 30rpx;
  font-weight: 600;
  color: #ff9f78;
}


.p-wrap {
  font-size: 32rpx;
  line-height: 48rpx;
  margin-bottom: 20rpx;
  display: flex;
  align-items: center;
  position: relative;
}

.p-wrap .label {
  width: 20rpx;
  height: 100%;
  position: absolute;
}

.label::before {
  content: '';
  display: inline-block;
  width: 20rpx;
  height: 20rpx;
  background-color: #FCD8CA;
  border-radius: 100rpx;
  line-height: 48rpx;
  flex-shrink: 0;
}

.p-wrap .p {
  padding-left: 40rpx;
  color: #666;
}