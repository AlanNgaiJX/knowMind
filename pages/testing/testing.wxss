/* pages/testing/testing.wxss */
.page-testing{

}

.swiper{
  height: 750rpx;
}

.swiper-item{
  box-sizing: border-box;
  padding: 60rpx;
}

.question{

}

.answers-list{
  margin-top: 30rpx;
  height: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.answer-item{
  flex: 1;
  display: flex;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  border: 1px solid #eeeeee;
  border-radius: 8rpx;
  margin-bottom: 30rpx;
}

.answer-item:nth-last-child(1){
  margin-bottom: 0;
}

.answer-item.selected{
    color: #1890FF;
    border: 1px solid #1890FF;
}

.step-counter-wrap{
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.submit-wrap{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

@keyframes scaleOutIn{
  0%{
    transform: scale(1);
  }

  50%{
    transform: scale(1.2);
  }

  100%{
    transform: scale(1);
  }
}

.btn-submit{
  background-color: #1890FF;
  width: 450rpx;
  height: 80rpx;
  color: #ffffff;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  font-size: 32rpx;
  animation-name: scaleOutIn;
  animation-duration: 2s;
  animation-iteration-count: infinite;
  transform-origin: center;
  letter-spacing: 3rpx;
}