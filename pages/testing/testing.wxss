/* pages/testing/testing.wxss */
.page-testing{
  width: 100%;
  height: 100vh;
  background-color: #FFFAF7;
}

.swiper{
  height: 750rpx;
}

.swiper-item{
  box-sizing: border-box;
  padding: 60rpx;
}

.question{

}

.answers-list{
  margin-top: 30rpx;
  height: 550rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
}

.answer-item{
  flex: 1;
  display: flex;
  align-items: center;
  padding: 30rpx;
  box-sizing: border-box;
  border: 1px solid #eeeeee;
  border-radius: 28rpx;
  margin-bottom: 30rpx;
  background-color: #FFF;
  box-shadow: 0rpx 0rpx 2rpx 0rpx rgb(199, 199, 199);
}

.answer-item:nth-last-child(1){
  margin-bottom: 0;
}

.answer-item.selected{
    color: #FFAC81;
    border: 1px solid #FFAC81;
}

.step-counter-wrap{
  display: flex;
  justify-content: center;
  margin-top: 30rpx;
}

.submit-wrap{
  display: flex;
  justify-content: center;
  align-items: center;
  margin-top: 30rpx;
}

.btn-submit{
  width: 210rpx;
  height: 101rpx;
  color: #333333;
  display: flex;
  justify-content: center;
  align-items: center;
  border-radius: 50rpx;
  font-size: 28rpx;
  animation-name: scaleOutIn;
  animation-duration: 2s;
  animation-iteration-count: infinite;
  transform-origin: center;
  letter-spacing: 3rpx;
  background: url("https://alanngai1996.xyz/store/know-mind/assets/btn-3d-pink.png") no-repeat center;
  background-size: contain;
}